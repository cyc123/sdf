/*外部容器*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
 
/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  margin-bottom: 120rpx;
}
 
/*每行单元格*/
.carts-item {
  display: flex;
  flex-direction: row;
  height:200rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width:100%;
  align-items: center;
  background-color: white;
  margin-bottom: 1px;
  position: relative;
}
/* 对号图标 */
.carts-choice{
  margin-right: 20rpx;
  margin-left: 24rpx;
} 
/*左部图片*/
.carts-image {
  width:160rpx;
  height:160rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.carts-image image{
  width: 100%;
  height: 100%;
}
 
 
/*右上部分标题*/
.carts-text{
  height: 160rpx;
  flex: 1;
  padding-right: 24rpx;
}
.carts-title {
  width: 360rpx;
  height: 85rpx;
  font-size: 22rpx;
  padding-right: 40rpx;
  overflow: hidden;
  /* text-overflow:ellipsis; 
  white-space: nowrap; */
}
 
/*右下部分价格与数量*/
.carts-subtitle {
  font-size: 25rpx;
  color:#A0A0A0;
  margin-top: 20rpx;
  /* margin: 20rpx 0 20rpx; */
}
 
/*加减号控制数量*/
.stepper-box{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.stepper-box>view:first-child{
  color: #A0A0A0;
  font-size: 22rpx;
  margin-top: 15rpx;
}
.stepper-box>view:first-child text{
  color: #426666;
  font-size: 32rpx;
}
.stepper{
  display: flex;
  border-radius: 5px;
  text-align: center;
}

.stepper text{
  display: block;
  width: 52rpx;
  height: 52rpx;
  border:1px solid transparent;
  line-height: 50rpx;
  color: #333;
  background-color: #f7f7f7;
}
.stepper text.normal{
  border:1px solid transparent; 
}
.stepper text.disabled{
  /* border:1px solid rgba(221,221,221,0.3); */
  color: #ccc;

}
.stepper .number{
  width: 100rpx;
  font-size: 28rpx;
  height: 50rpx;
   border: 1px solid transparent; 
  background-color: #F7F7F7;
  line-height: 50rpx;
  color: #333333;
  margin: 0 2px;
}
.stepper text:first-child{
  border-right: none;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}
.stepper text:last-child{
  border-left: none;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
}
.carts-list .delete{
  /* height: 100%; */
  position: absolute;
  right: 0;
  top: 0;
}
.delete-img{
  width: 32rpx;
  height: 32rpx;
  padding: 15rpx;
  margin-right: 9rpx;
  margin-top: 15rpx;
}
.delete-img image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

/* 全选和区结算按钮 ********************************/
/*底部按钮*/
.carts-footer {
  width: 100%;
  height: 120rpx;
  display: flex;
  /* flex-direction: row; */
  /* justify-content: space-between; */
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: white;
  overflow: hidden;
  z-index: 1000;
}
 
/*复选框*/
.carts-footer icon {
  margin-left: 20rpx;
  margin-right: 15rpx;
}
 
/*全选字样*/
.carts-footer text {
  font-size: 30rpx;
  margin-left: 8rpx;
  line-height: 10rpx;
}
.all-chioce{
  height: 100%;
  border-top: 1px solid #dddddd;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.footer-left{
  width: 190rpx;
  display: flex;
  align-items: center;
}
.footer-right{
  padding-right: 25rpx;
  flex: 1;
  direction: rtl;
}
.right-text{
  line-height: 70rpx;
}
.right-text text:last-child{
  color: #d81e06;
}
