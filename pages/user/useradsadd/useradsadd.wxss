/**index.wxss**/
page{
  background: #f5f5f5;
}
.list {
   border-top:1px solid #eee; 
}
.list .item{
  height: 100rpx;
  display: flex;
  padding:5rpx 15rpx;
  font-size: 30rpx;
  color:#333;
  position: relative;
  border-bottom: 1rpx solid #f3f3f3;
  background-color: #fff;
  box-sizing: border-box;
}
/* 地址选择器 */
.list .item .label{
  line-height: 50rpx;
  width:150rpx;
  padding-right: 5rpx;
  color:#333;
  text-align: right;
}
.picker{
  width: 490rpx;
  color:#666;
}
.list .item input {
  width: 490rpx;
  color:#666;
}
.list .item:after{
  content:"";
  display: block;
  clear: both;
}



/* 按钮 */
.btn{
  width: 602rpx;
  height: 85rpx;
  background-color: #ff0036;
  font-size: 30rpx;
  color:#fff;
  border-radius: 44px;
  margin-top: 40rpx;
}
.btndelect{
  background-color: #fff;
  color:#ff0036;
}