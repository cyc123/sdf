/**index.wxss**/
page{
  background: #f5f5f5;
}
.ccc{
  border-top:2px solid #ff5d0f;
  border-bottom:2px solid #ff5d0f;
}
picker-view-column{
  margin: 0 20rpx;
}
.list {
   border-top:1px solid #eee; 
}
.list .item{
  height: 75rpx;
  display: flex;
  padding:5px 15px;
  font-size: 14px;
  color:#333;
  position: relative;
  border-bottom: 1px solid #f3f3f3;
  background-color: #fff;
  box-sizing: border-box;
}
.list .item-addr{
  height: 75rpx;
  display: flex;
  padding:5px 15px;
  font-size: 14px;
  color:#333;
  border-bottom: 1px solid #f3f3f3; 
  border-top: 1px solid #f3f3f3; 
  background-color: #fff;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.list .item-addr>view:first-child{
  margin-right: 10rpx;
}
.list .item-addr>view:last-child{
  color: #666;
}
.list .item label {
  float: left;
  line-height: 26px;
  width:70px;
  padding-right: 10px;
  color:#333;
  text-align: right;
}
.list .item input {
  float: left;
  min-width: 490rpx;
  color:#666;
}
.list .item textarea {
  float: left;
  width: 60%;
  height: 50px;
  padding-top:5px;
}
.list .item:after{
  content:"";
  display: block;
  clear: both;
}
.list .item .btn {
  width: 702rpx;
  height: 72rpx;
  background-color: #ff0036;
  font-size: 30rpx;
  color:#fff;
  border-radius: 44px;
}
.list .bt {
  text-align: center;
}
picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}
picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  overflow: hidden;
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}
text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.left-bt{
  left: 30rpx;
}
.right-bt {
  right: 30rpx;
}
.line{
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx; 
  background-color: #eeeeee;
}