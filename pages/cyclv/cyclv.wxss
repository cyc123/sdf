/* 商品信息 */
.among-content{
  width: 730rpx;
  display: flex;
  flex-wrap:wrap;
  padding-bottom: 40rpx;
  margin-top: 8rpx;
}
.shop-box{
  width:360rpx;
  height: 510rpx;
  background-color: white;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.shop-img{
  width: 337rpx;
  height: 337rpx;
  display: block;
  margin: auto
}
.image-full{
  width: 100%;
  height:100%;
}
.shop-detail{
  height: 175rpx;
  overflow: hidden;
}
.shop-name{
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden; 
}

.shop_info{
  width: 337rpx;
  height:90rpx;
  color: rgb(51, 51, 51);
  font-size: 26rpx;
  margin: auto;
  margin-top: 20rpx;
  overflow: hidden;
}
.bottom_info{
  width: 337rpx;
  margin: auto;
  height:60rpx;
  display: flex;
  flex-wrap: wrap;
}
.bottom_info .price1{
  height: 100%;
  font-size: 26rpx;
  color: red;
  text-align: left;
  line-height: 60rpx;
}
.price2{
  height: 100%;
  font-size: 20rpx;
  text-decoration:line-through;
  line-height: 60rpx;
  width: 30%;
  margin-left: 10rpx
}
/* 价格销量 */
.sales{
  /* height: 100%; */
  font-size: 20rpx;
  color: #999;
  text-align: right;
  line-height: 60rpx;
  width: 35%;
}
