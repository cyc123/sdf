/* 商品尺寸 */
.goodsizetop{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  background: black;
  opacity: 0.1;
}
.goodsize{
  width: 750rpx;
  height: 1000rpx;
  position: fixed;
  bottom: 0rpx;
  background: white;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.goodsize .good{
  width: 710rpx;
  height: 200rpx;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.goodsize .close{
  position: absolute;
  right: 10px;
  top: 0px;
  color: #f5f5f5;
}
.goodsize .good .imgbox{
  width: 170rpx;
  height: 170rpx;
  float: left;
}
.goodsize .good .price{
  height: 120rpx;
  width: 170rpx;
  float: left;
  margin-left: 40rpx;
  margin-top: 50rpx;
  font-size: 22rpx;
}
.goodsize .pc1{
  color: red;
  font-size: 36rpx;
}
/* 颜色 尺寸控制区 */
.size{
  width: 710rpx;
  height: 680rpx;
}
.item-cot{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap:wrap;
}
.size .content{
  font-size: 22rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  padding:5rpx 20rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.goodsize .sizebtn{
  width: 710rpx;
  height: 60rpx;
  margin-top: 20rpx;
  border-radius: 100rpx;
}
.size .select{
  background: #F23619;
  color: white
}


/*加减号控制数量*/
.stepper-box{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.stepper-box>view:first-child{
  color: #A0A0A0;
  font-size: 22rpx;
  margin-top: 15rpx;
}
.stepper-box>view:first-child text{
  color: #426666;
  font-size: 32rpx;
}
.stepper{
  width: 200rpx;
  display: flex;
  border-radius: 5px;
  text-align: center;
  margin-top: 10rpx;
}

.stepper text{
  display: block;
  width: 52rpx;
  height: 52rpx;
  border:1px solid transparent;
  line-height: 50rpx;
  color: #333;
  background-color: #f7f7f7;
}
.stepper text.normal{
  border:1px solid transparent; 
}
.stepper text.disabled{
  /* border:1px solid rgba(221,221,221,0.3); */
  color: #ccc;

}
.stepper .number{
  width: 100rpx;
  font-size: 28rpx;
  height: 50rpx;
   border: 1px solid transparent; 
  background-color: #F7F7F7;
  line-height: 50rpx;
  color: #333333;
  margin: 0 2px;
}
.stepper text:first-child{
  border-right: none;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}
.stepper text:last-child{
  border-left: none;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
}