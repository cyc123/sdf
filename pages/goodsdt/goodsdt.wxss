page{
  background: #f5f5f5;
  height: 100%;
}
.hiddenscrool{
  height: 100%;
  overflow: hidden;
}
/* 轮播 */
swiper{
  width:750rpx;
  height: 750rpx;
}
swiper-item image{
 width: 100%;
}
/* 商品标题 */
.good-info{
  height: 220rpx;
  font-size: 32rpx;
  background: white;
}
.if1-price{
  font-size: 36rpx;
}
.good-info .if1{
  margin-top: 20rpx;
  margin-left: 10px;
  color: red;
}
.good-info .if2{
  margin-left: 10px;
  color: black;
}
/* 商品评价 */
.evaluate{
  margin-top: 20rpx;
  width: 100%;
  background: white;
  font-size: 32rpx;
  color: black;
}
.all{
  height: 80rpx;
}
.all .right{
  color: #F23619;
}
.evaluate .el1{
  display: flex;
  align-items: center;
}
.evaluate .el1 image{
  width: 40rpx;
  height: 40rpx;
}
.evaluate .el2{
  padding-bottom: 40rpx;
}
/* 底部table */
.mytable{
  width: 750rpx;
  height: 120rpx;
  background-color: white;
  position: fixed;
  bottom: 0rpx;
  font-size: 22rpx;
}
.tb1{
  width: 110rpx;
  height: 120rpx;
}
.tb1 .img{
  width: 60rpx;
  height: 60rpx;
}
.tb4{
  width: 210rpx;
  height: 120rpx;
  background: #FFC519;
  color: white;
}
.tb5{
  background: #F23619;
}
/* 商品尺寸 */
.goodsizetop{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  background: black;
  opacity: 0.1;
}
.goodsize{
  width: 750rpx;
  height: 1000rpx;
  position: fixed;
  bottom: 0rpx;
  background: white;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.goodsize .good{
  width: 710rpx;
  height: 200rpx;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.goodsize .close{
  position: absolute;
  right: 10px;
  top: 0px;
  color: #f5f5f5;
}
.goodsize .good .imgbox{
  width: 170rpx;
  height: 170rpx;
  float: left;
}
.goodsize .good .price{
  height: 120rpx;
  width: 170rpx;
  float: left;
  margin-left: 40rpx;
  margin-top: 50rpx;
  font-size: 22rpx;
}
.goodsize .pc1{
  color: red;
  font-size: 36rpx;
}
/* 颜色 尺寸控制区 */
.size{
  width: 710rpx;
  height: 680rpx;
}
.item-cot{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap:wrap;
}
.size .content{
  font-size: 22rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  padding:5rpx 20rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.goodsize .sizebtn{
  width: 710rpx;
  height: 60rpx;
  margin-top: 20rpx;
  border-radius: 100rpx;
}
.size .select{
  background: #F23619;
  color: white
}
